# Etapa de build
FROM node:18 AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npx ng build --configuration production

# Etapa de producci√≥n
FROM nginx:alpine
COPY --from=build /app/dist/tiendakeytlin.client /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
